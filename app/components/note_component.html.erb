<div class="font-serif bg-amber-50 rounded m-2 dark-text relative mx-auto md:h-96">
  <div class="flex flex-col md:flex-row relative h-full">
    <!-- Left side for the message -->
    <div class="md:w-2/3 p-4">
      <% if helpers.current_user.id == @note.user_id %>
        <%= button_to @note, method: :delete, class: "hover:bg-red-800 px-2 rounded text-amber-50 bg-stone-900 float-right" do %>
          <i class="fa-solid fa-xmark"></i>
        <% end %>
      <% end %>
      <div class="font-extrabold text-lg">
        <%= @note.title %>
      </div>
      <div class="flex-wrap break-words"><%= @note.body %></div>
    </div>

    <!-- Right side for the address -->
    <div class="border-t-2 md:border-t-0 md:border-l-2 border-gray-300 px-5 md:w-1/3 flex items-center justify-center mt-4 md:mt-0 md:h-full relative">
      <%= image_tag("stamp.svg", alt: "stamp", class: "hidden md:block absolute top-0 right-0 m-2") %>
      <%= image_tag("stamp.svg", alt: "stamp", class: "md:hidden absolute bottom-0 right-0 m-0") %>
      <div>
        <div class="text-sm font-bold text-center">Address:</div>
        <div class="text-sm text-center">
          <p>to 
            <% if @note.recipient.present? %>
              <%= @note.recipient %>
            <% else %>
              Anonymous
            <% end %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>