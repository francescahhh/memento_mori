
<h1 class="base-text">Memento Mori</h1>
<h2 class="base-text">Log in</h2>


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class: "base-text" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "bg-amber-50" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "base-text"%><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "bg-amber-50" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me, class: "bg-amber-50"%>
      <%= f.label :remember_me, class: "base-text" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "button cursor-pointer m-4" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
