<div class="w-full">
  <% content_for :title, "Candles" %>
  <div class="flex justify-between items-center">
    <h2 class="base-text">Candles</h2>
    <%= link_to "New candle", new_candle_path, class: "button" %>
  </div>
  <div id="candles" class="min-w-full">
    <% @candles.each do |candle| %>
      <%= render candle %>
      <p>
        <%= link_to "Show this candle", candle, class: "button" %>
      </p>
    <% end %>
  </div>
</div>
