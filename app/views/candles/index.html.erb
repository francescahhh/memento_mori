<% if user_signed_in? %>
<div class="w-full">
  <% content_for :title, "Candles" %>
  <div class="flex justify-between items-center mb-6">
    <h2 class="base-text">Candles</h2>
    <%= link_to new_candle_path, class: "button cursor-pointer flex items-center space-x-2" do %>
      <i class="fa-solid fa-fire-flame-curved"></i>
      <span>New Candle</span>
    <% end %>
  </div>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
    <% @candles.each do |candle| %>
      <div class="text-center">
        <%= link_to candle_path(candle), class: "block" do %>
          <%= render(CandleComponent.new(candle: candle)) %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<% end %>
